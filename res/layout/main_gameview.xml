<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="#00ee66"
            android:gravity="center"
            android:text="勇 者 闯 迷 宫"
            android:textSize="30sp"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/main_title_tv">

        <ScrollView
                android:id="@+id/main_info_sv"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:fadeScrollbars="false">

            <LinearLayout
                    android:id="@+id/main_info_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#fff"/>

        <LinearLayout
                android:id="@+id/root_item_character"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/main_info_sv"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/character_itembar"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#58c4ff"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/character_itembar_contribute"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#7a31ff"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="属性"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#fff"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/character_item_contribute"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="HP"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/main_contri_hp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="攻击"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/main_contri_att"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="防御"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/main_contri_def"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="55dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="锻造材料"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/main_contri_currentexp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="55dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="可用点数"
                            android:textSize="12sp"/>

                    <TextView
                            android:id="@+id/main_contri_needexp"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="12sp"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="武器"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/main_contri_level"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="20sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="80dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="护具"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/main_armor_level"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
